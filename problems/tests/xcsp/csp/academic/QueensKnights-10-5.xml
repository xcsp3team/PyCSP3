<instance format="XCSP3" type="CSP">
  <variables>
    <array id="q" note="q[i] is the column number of the board where is put the ith queen (in the ith row)" size="[10]"> 0..9 </array>
    <array id="k" note="k[i] is the cell number of the board where is put the ith knight" size="[5]"> 0..99 </array>
  </variables>
  <constraints>
    <allDifferent note="all queens are put in different columns"> q[] </allDifferent>
    <allDifferent note="controlling no two queens on the same upward diagonal"> add(q[0],0) add(q[1],1) add(q[2],2) add(q[3],3) add(q[4],4) add(q[5],5) add(q[6],6) add(q[7],7) add(q[8],8) add(q[9],9) </allDifferent>
    <allDifferent note="controlling no two queens on the same downward diagonal"> sub(q[0],0) sub(q[1],1) sub(q[2],2) sub(q[3],3) sub(q[4],4) sub(q[5],5) sub(q[6],6) sub(q[7],7) sub(q[8],8) sub(q[9],9) </allDifferent>
    <allDifferent note="all knights are put in different cells"> k[] </allDifferent>
    <group note="all knights form a cycle">
      <intension> or(and(eq(dist(div(%0,10),div(%1,10)),1),eq(dist(mod(%0,10),mod(%1,10)),2)),and(eq(dist(div(%0,10),div(%1,10)),2),eq(dist(mod(%0,10),mod(%1,10)),1))) </intension>
      <args> k[0] k[1] </args>
      <args> k[1] k[2] </args>
      <args> k[2] k[3] </args>
      <args> k[3] k[4] </args>
      <args> k[4] k[0] </args>
    </group>
  </constraints>
</instance>
